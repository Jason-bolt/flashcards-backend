{
  "name": "flashcard_backend",
  "version": "1.0.0",
  "description": "Flash card application",
  "main": "src/index.ts",
  "scripts": {
    "dev": "nodemon",
    "build": "npm install && rimraf ./build && tsc",
    "start": "npm run migrate:up && node build/index.js",
    "migrate": "db-migrate --migrations-dir ./src/config/database/migrations",
    "migrate:up": "npm run migrate up",
    "migrate:down": "npm run migrate down",
    "migrate:reset": "npm run migrate reset",
    "migrate:create": "npm run migrate create",
    "seed:create": "npm run migrate create:seeds",
    "seed:up": "npm run migrate up:seeds",
    "seed:down": "npm run migrate down:seeds",
    "seed:reset": "npm run migrate reset:seeds",
    "db:reset": "npm run seed:reset && npm run migrate:reset && npm run migrate:up && npm run seed:up",
    "test": "nyc --reporter=lcov --reporter=text --reporter=text-summary mocha -r ts-node/register src/tests/**/*.test.ts --exclude src/config/**/*.ts --timeout 15000 --exit"
  },
  "keywords": [],
  "author": "Jason Kwame Appiatu",
  "license": "ISC",
  "dependencies": {
    "@apollo/server": "^4.10.2",
    "bcrypt": "^5.1.1",
    "bluebird": "^3.7.2",
    "chai": "^4.0.0",
    "cors": "^2.8.5",
    "db-migrate": "^0.11.14",
    "db-migrate-pg": "^1.5.2",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "graphql": "^16.8.1",
    "graphql-resolvers": "^0.4.2",
    "graphql-scalars": "^1.23.0",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "^9.0.2",
    "pg-monitor": "^2.1.0",
    "pg-promise": "^11.6.0",
    "tracer": "^1.3.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/chai": "^4.3.14",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/graphql-resolvers": "^0.3.2",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/mocha": "^10.0.6",
    "@types/node": "^20.12.5",
    "@types/sinon": "^17.0.3",
    "mocha": "^10.3.0",
    "nodemon": "^3.1.0",
    "nyc": "^15.1.0",
    "rimraf": "^5.0.5",
    "sinon": "^17.0.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.4"
  }
}
